extends ../layout.jade
block cabecera
	div(class="col-md-5 center-block no-float top-space text-left")
		h1 Editar Serie
		form(method="POST" action="/menu/#{producto.id}?_method=put" style="margin-top:1.5em;" enctype="multipart/form-data")
			div(class="form-group")
				label Titulo
				input(type="text" name="titulo"  value="#{producto.titulo}" placeholder="Nombre de la serie" class="form-control")
			div(class="form-group")
				label Descripcion
				textarea(type="text" name="descrip" placeholder="Descripcion de la serie" class="form-control")
					=producto.descrip
			div(class="form-group")
				label Nota
				input(type="text" name="nota" value="#{producto.nota}" placeholder="Nota de la serie" class="form-control")
			div(class="form-group")
				label Usuario
				input(type="text" name="user" placeholder="Nombre usuario" class="form-control")
			div(class="form-group")
				label Contraseña
				input(type="password" name="password" placeholder="Contraseña" class="form-control")
			div(class="form-group text-right")
				input(type="submit" class="btn btn-info" value="Guardar")