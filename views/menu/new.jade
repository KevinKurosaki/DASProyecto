extends ../layout.jade
block cabecera
	div(class="col-md-5 center-block no-float top-space text-left")
		h1 Agregar Serie
		form(method="post" action="/menu" style="margin-top:1.5em;")
			div(class="form-group")
				label Titulo
				input(type="text" name="titulo" placeholder="Nombre de la serie" class="form-control")
			div(class="form-group")
				label Descripcion
				input(type="text" name="descrip" placeholder="Descripcion de la serie" class="form-control")
			div(class="form-group")
				label Nota
				input(type="text" name="nota" placeholder="Nota de la serie" class="form-control")
			div(class="form-group text-right")
				input(type="submit" class="btn btn-info" value="Guardar")